@*<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <div class="col-lg-6">
        <section>
            <form id="account" method="post">
                <img src="/Image/nubex.png" alt="..." style="height:39px; width:181px;">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <hr style="width:0%;text-align:left;margin-left:0">
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <hr style="width:0%;text-align:left;margin-left:0">
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-dark">Log in</button>
                </div>
                <div>
                    <p>
                        @*<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>*@
                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="./ForgotPassword">Forgot password?</a></p>
                    </p>
                    <p>
                        @*<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>*@
                        <p>Don't have an account? <a href="./Register" class="link-dark">Register here</a></p>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
    <div class="mx-auto d-none d-md-block col-lg-6 col-md-offset-2">
        <img src="/Image/nubexlogin.jpg" alt="Login image" class="w-100 vh-90" style="object-fit: cover; object-position: left;">
