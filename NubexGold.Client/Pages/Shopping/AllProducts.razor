@page "/products/{Metal}/{Id}"
@page "/products/{Metal}"
@page "/products"


<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@PageHeader</MudText>
<MudDivider/>

<center>
  <MudContainer Class="mt-2">
    <MudGrid>
        
@if(Loading)
{
 <MudContainer  Class="d-xl-inline-flex mb-4">
     @for(var x = 0; x<= 3; x++)
     {
         <SkeletonCard/>
     }
</MudContainer>   
}
else
{
    @if(Products == null)
                {
                    <MudImage Src="images/mony.jpg" Alt="Mony the dog" Elevation="25" Class="rounded-lg"/>
                    
                }
                else
                {
                    
                    @foreach(var item in Products)
                    {
                        <MudItem xs="12" sm="4">
                            <MudLink Href="@($"/ItemDetail/{item.ProductId}")">
                            <img src="@item.Image1" class="img-fluid" style="width:250px; height:300px;" alt="@item.SKU">
                            </MudLink>
                            <MudText Class="mt-1">
                                @item.Name @item.Purify - Cond: @item.Condition
                            </MudText>
                            <MudText Typo="Typo.caption" >
                                Price From MYR @item.Price
                            </MudText>
                        </MudItem>
                    }
                    @if(message != string.Empty)
                    {
                        <MudText Typo="Typo.body2">@message</MudText>
                    }
                }
}
</MudGrid>
    </MudContainer>
</center>
