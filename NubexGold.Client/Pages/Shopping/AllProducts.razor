
@page "/products/{Metal}"
@page "/products"


<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@PageHeader</MudText>
<MudDivider/>

<center>
  <MudContainer Class="mt-2">
    <MudGrid>
        
@if(Loading)
{
 <MudContainer  Class="d-xl-inline-flex mb-4">
     @for(var x = 0; x<= 3; x++)
     {
         <SkeletonCard/>
     }
</MudContainer>   
}
else
{
    @if(Products == null)
                {
                    <SkeletonCard></SkeletonCard>
                    
                }
                else
                {
                    
                    @foreach(var item in Products)
                    {
                        <MudItem xs="12" sm="4">
                            <MudLink Href="@($"/ItemDetail/{item.ProductId}")">
                            <img src="@item.Image1" class="img-fluid" style="width:250px; height:300px;" alt="@item.ProductSKU">
                            </MudLink>
                            <MudText Class="mt-1">
                                @item.ProductName @item.Purify - Cond: @item.Condition
                            </MudText>
                            <MudText Typo="Typo.caption" >
                                Price From MYR @item.Price
                            </MudText>
                        </MudItem>
                    }
                    @if(message != string.Empty)
                    {
                        <MudText Typo="Typo.body2">@message</MudText>
                    }
                }
}

</MudGrid>

    </MudContainer>
</center>
<hr style="width:0%;text-align:left;margin-left:0">
<div class="d-flex flex-column align-center">
    <MudPagination BoundaryCount="1" MiddleCount="1" Count="@PageCount" @bind-Selected="@_selected" />
</div>
<MudText Align="Align.Center">Selected page: @_selected</MudText>
<hr style="width:0%;text-align:left;margin-left:0">
