@using Microsoft.AspNetCore.Components.Authorization



@inject NavigationManager Navigation


<MudPaper Width="250px" Elevation="0" Class="py-3">
    <MudNavMenu Color="Color.Info">
        <AuthorizeView>
            <Authorized>  
                <MudNavLink Href="/" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Dashboard">Home</MudNavLink>
                <MudNavLink Href="/products" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Storage">Products</MudNavLink>
                <MudNavLink Href="/about">About</MudNavLink>
                <MudNavLink Href="/dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Dashboard">Dashboard</MudNavLink>
                <MudNavLink Href="/Checkout" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.ShoppingCartCheckout">Checkout</MudNavLink>
                <MudNavLink Href="/shoppingcart" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.ShoppingCart" Disabled="false">Cart</MudNavLink>
                <MudNavLink Href="/Seller" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Storefront" Disabled="false">Seller</MudNavLink>
                <MudNavGroup Title="Admin" Expanded="false">
                    <MudNavLink Href="Product">Add Product</MudNavLink>
                    <MudNavLink Href="#">Product List</MudNavLink>
                    <MudNavLink Href="#">Seller List</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="Settings" Expanded="false">
                    <MudNavLink Href="authentication/profile">Users</MudNavLink>
                    <MudNavLink Href="/security">Security</MudNavLink>
                </MudNavGroup>
            </Authorized>
            <NotAuthorized>
                    <MudNavLink Href="/" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Dashboard">Home</MudNavLink>
                    <MudNavLink Href="/products" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Storage">Products</MudNavLink>
                    <MudNavLink Href="/about">About</MudNavLink>
                    <MudNavLink Href="/authentication/login">Login</MudNavLink>
                    <MudNavLink Href="/swagger/index.html" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.LiveHelp" Target="_blank"> Swagger</MudNavLink>
                </NotAuthorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>


